@using EntityLayer.Concrete
@model List<Certification>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<h3>Sertifikalar</h3>
<table class="table table-bordered" id="tblCertification">
    <thead>
        <tr>
            <th>#</th>
            <th>Sertifika</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Description</td>
                <td><a href="/Certification/Delete/@item.ID" class="btn btn-danger btn-sm">Sil</a></td>
                <td><a href="/Certification/Update/@item.ID" class="btn btn-warning btn-sm">Güncelle</a></td>

            </tr>
        }
    </tbody>
</table>
<a href="/Certification/Add" class="btn btn-primary">Sertifika Ekle</a>





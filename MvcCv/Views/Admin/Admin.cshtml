@using EntityLayer.Concrete
@model List<Visitor>
@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Adminler</h3>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kullanıcı Adı</th>
        <th>Mail</th>
        <th>Rol</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Username</td>
            <td>@item.Mail</td>
            <td>@item.Roles</td>
            <td><a href="/Admin/Delete/@item.ID" class="btn btn-danger btn-sm">Sil</a></td>
            <td><a href="/Admin/Update/@item.ID" class="btn btn-warning btn-sm">Güncelle</a></td>

        </tr>
    }
</table>
<a href="/Admin/Add" class="btn btn-primary">Admin Ekle</a>



@using EntityLayer.Concrete
@model List<Experience>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Deneyimler</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Platform</th>
        <th>Ünvan</th>
        <th>Açıklama</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Title</td>
            <td>@item.SubTitle</td>
            <td>@item.Description</td>
            <td>@item.Date</td>
            <td><a href="/Experience/Delete/@item.ID" class="btn btn-danger btn-sm">Sil</a></td>
            <td><a href="/Experience/Update/@item.ID" class="btn btn-warning btn-sm">Güncelle</a></td>

        </tr>
    }
</table>
<a href="/Experience/Add" class="btn btn-primary">Deneyim Ekle</a>


